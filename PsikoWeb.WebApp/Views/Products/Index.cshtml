
@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>

    <table class="table table-striped">
        <thead>
           <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreateDate</td>
            <td>Actions</td>
           </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@(item.Category != null ? item.Category.Name : "Unknown")</td>
            <td>@item.CreateDate</td>
             <td>
              <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
              <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
             </td>
            </tr>
        }
        <div>
            <a class="btn btn-primary" asp-controller="Products" asp-action="Save">Ürün Ekle</a>
        </div>
        </tbody>
    </table>