@model EventModel
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Randevu Oluştur</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Title" class="form-control" placeholder=" Randevu Başlığı Giriniz" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Tarih </label>
                    <input asp-for="Date" class="form-control" placeholder="Randevu Tarihi" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Randevu Notu Giriniz"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>               
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Kaydet</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> İptal</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>