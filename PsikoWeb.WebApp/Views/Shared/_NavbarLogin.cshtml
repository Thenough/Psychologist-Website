@if (User.Identity!.IsAuthenticated)
{
    <ul class="navbar-nav me-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Member" asp-action="LogOut">Çıkış Yap</a></li>
                @if(User.HasClaim(x =>x.Value =="admin".ToLower()))
                {
                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                }
            </ul>
        </li>
    </ul>
}
else
{

    <a class="btn btn-outline-success mx-2" asp-controller="Home" asp-action="SignIn">Üye Girişi</a>
    <a class="btn btn-outline-success ms-0" asp-controller="Home" asp-action="SignUp">Kayıt Ol</a>

}